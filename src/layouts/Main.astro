---
import Breadcrumb from "@/components/Breadcrumb.astro";
import { SITE } from "@/config";

interface StringTitleProp {
  pageTitle: string;
  pageDesc?: string;
}

interface ArrayTitleProp {
  pageTitle: [string, string];
  titleTransition: string;
  pageDesc?: string;
}

export type Props = StringTitleProp | ArrayTitleProp;

const { props } = Astro;

const backUrl = SITE.showBackButton ? Astro.url.pathname : "/";
---

<Breadcrumb />
<main
  data-backUrl={backUrl}
  id="main-content"
  class="mx-auto w-full max-w-5xl px-4 pb-14 sm:px-6"
>
  {
    "titleTransition" in props ? (
      <h1 class="gradient-text mt-8 mb-3 font-display text-3xl font-bold tracking-tight sm:text-4xl">
        {props.pageTitle[0]}
        <span transition:name={props.titleTransition}>
          {props.pageTitle[1]}
        </span>
      </h1>
    ) : (
      <h1 class="mt-8 mb-3 font-display text-3xl font-semibold tracking-tight sm:text-4xl">
        {props.pageTitle}
      </h1>
    )
  }
  <p class="mb-8 max-w-3xl text-base text-foreground/75 sm:text-lg">
    {props.pageDesc}
  </p>
  <slot />
</main>

<script>
  document.addEventListener("astro:page-load", () => {
    const mainContent: HTMLElement | null =
      document.querySelector("#main-content");
    const backUrl = mainContent?.dataset?.backurl;
    if (backUrl) {
      sessionStorage.setItem("backUrl", backUrl);
    }
  });
</script>
