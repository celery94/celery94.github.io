---
import { getCollection } from "astro:content";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import LinkButton from "@/components/LinkButton.astro";
import Card from "@/components/Card.astro";
import getSortedPosts from "@/utils/getSortedPosts";
import { slugifyStr } from "@/utils/slugify";
import IconArrowRight from "@/assets/icons/IconArrowRight.svg";
import { SITE } from "@/config";

const posts = await getCollection("blog");

const sortedPosts = getSortedPosts(posts);
const featuredPosts = sortedPosts.filter(({ data }) => data.featured);
const recentPosts = sortedPosts.filter(({ data }) => !data.featured);
const latestPost = sortedPosts[0];

const allTags = sortedPosts.flatMap(({ data }) => data.tags ?? []);
const tagFrequency = allTags.reduce<Record<string, number>>((acc, rawTag) => {
  const tag = rawTag?.trim();
  if (!tag) {
    return acc;
  }
  acc[tag] = (acc[tag] ?? 0) + 1;
  return acc;
}, {});

const trendingTags = Object.entries(tagFrequency)
  .sort((a, b) => b[1] - a[1])
  .slice(0, 10)
  .map(([name, count]) => ({
    name,
    count,
    slug: slugifyStr(name),
  }));


---

<Layout>
  <Header />
  <main
    id="main-content"
    data-layout="index"
    class="mx-auto w-full max-w-6xl px-4 pb-12 sm:px-6"
  >


    <!-- Trending Topics -->
    {trendingTags.length > 0 && (
      <section class="mt-16 mb-12">
        <div class="flex items-center justify-between mb-6">
          <h2 class="text-2xl font-bold flex items-center gap-2">
            <span class="text-accent">#</span> 热门话题
          </h2>
          <a href="/tags/" class="text-sm font-medium text-foreground/60 hover:text-primary transition-colors flex items-center gap-1">
            全部标签 <IconArrowRight class="w-4 h-4" />
          </a>
        </div>
        <div class="flex flex-wrap gap-3">
          {trendingTags.map(({ name, slug, count }) => (
            <a href={`/tags/${slug}/`} class="group relative px-4 py-2 rounded-xl bg-white/5 border border-white/10 hover:border-accent/30 hover:bg-accent/5 transition-all duration-300">
              <span class="text-sm font-medium text-foreground/80 group-hover:text-accent transition-colors">
                {name}
              </span>
              <span class="ml-2 text-xs text-foreground/40 group-hover:text-accent/60">
                {count}
              </span>
            </a>
          ))}
        </div>
      </section>
    )}

    <!-- Featured Posts -->
    {featuredPosts.length > 0 && (
      <section class="mb-20 relative">
        <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[120%] h-[120%] bg-gradient-to-b from-transparent via-primary/5 to-transparent pointer-events-none blur-3xl -z-10"></div>
        
        <div class="flex items-end justify-between mb-8">
          <div>
            <h2 class="text-3xl font-bold mb-2">精选文章</h2>
            <p class="text-foreground/60">值得反复阅读的深度内容</p>
          </div>
        </div>

        <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
          {featuredPosts.map(({ data, id }, index) => (
            <div class={`transform transition-all duration-500 hover:-translate-y-1 ${index === 0 ? 'lg:col-span-2' : ''}`}>
              <Card
                href={`/posts/${id}/`}
                frontmatter={data}
                secHeading={false}
                coverImage={index === 0 && data.ogImage ? (typeof data.ogImage === 'string' ? data.ogImage : data.ogImage.src) : undefined}
              />
            </div>
          ))}
        </div>
      </section>
    )}

    <!-- Recent Posts -->
    {recentPosts.length > 0 && (
      <section class="mb-16">
        <div class="flex items-center gap-4 mb-8">
          <h2 class="text-2xl font-bold">最新发布</h2>
          <div class="h-px flex-1 bg-gradient-to-r from-border to-transparent"></div>
        </div>
        
        <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
          {recentPosts.map(
            ({ data, id }, index) =>
              index < SITE.postPerIndex && (
                <Card
                  href={`/posts/${id}/`}
                  frontmatter={data}
                  secHeading={false}
                />
              )
          )}
        </div>

        <div class="mt-12 text-center">
          <LinkButton
            href="/posts/"
            class="inline-flex items-center gap-2 px-8 py-3 rounded-full bg-surface border border-border hover:border-primary/50 hover:text-primary transition-all duration-300 shadow-sm hover:shadow-md"
          >
            浏览全部归档
            <IconArrowRight class="w-4 h-4" />
          </LinkButton>
        </div>
      </section>
    )}
  </main>
  <Footer />
</Layout>

<script>
  document.addEventListener("astro:page-load", () => {
    const indexLayout = (document.querySelector("#main-content") as HTMLElement)
      ?.dataset?.layout;
    if (indexLayout) {
      sessionStorage.setItem("backUrl", "/");
    }
  });
</script>

<style>
  /* Custom Animations & Utilities */
  .bg-surface {
    background: color-mix(in srgb, var(--color-background) 80%, transparent);
    backdrop-filter: blur(20px);
  }

  .bg-grid-pattern {
    background-image: 
      linear-gradient(to right, rgba(128, 128, 128, 0.1) 1px, transparent 1px),
      linear-gradient(to bottom, rgba(128, 128, 128, 0.1) 1px, transparent 1px);
    background-size: 40px 40px;
  }

  .animate-pulse-slow {
    animation: pulse 8s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }

  .animate-gradient-x {
    background-size: 200% 200%;
    animation: gradient-x 8s ease infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 0.3; transform: scale(1); }
    50% { opacity: 0.5; transform: scale(1.1); }
  }

  @keyframes gradient-x {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }

  .perspective-1000 {
    perspective: 1000px;
  }

  .btn-primary {
    background: linear-gradient(135deg, var(--color-primary), var(--color-accent));
    box-shadow: 0 4px 14px 0 rgba(var(--accent-rgb), 0.39);
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(var(--accent-rgb), 0.23);
    filter: brightness(1.1);
  }

  .btn-secondary {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    color: var(--color-foreground);
  }

  .btn-secondary:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: var(--color-foreground);
    transform: translateY(-2px);
  }

  /* Dark mode adjustments */
  :global(.dark) .bg-surface {
    background: rgba(15, 23, 42, 0.6);
  }
</style>
