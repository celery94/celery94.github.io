---
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import LinkButton from "@/components/LinkButton.astro";
import { SITE } from "@/config";
---

<Layout title={`404 Not Found | ${SITE.title}`}>
  <Header />

  <main
    id="main-content"
    class="mx-auto flex max-w-5xl flex-1 items-center justify-center px-4"
  >
    <div class="surface-panel mb-14 flex flex-col items-center justify-center px-8 py-10 text-center">
      <h1 class="font-display text-accent text-8xl font-bold sm:text-9xl">404</h1>
      <span aria-hidden="true">¯\_(ツ)_/¯</span>
      <p class="mt-4 font-display text-2xl sm:text-3xl">Page Not Found</p>
      <LinkButton
        href="/"
        class="my-6 rounded-full border border-border/80 px-4 py-2 text-sm font-medium"
      >
        Go back home
      </LinkButton>
    </div>
  </main>

  <Footer />
</Layout>
