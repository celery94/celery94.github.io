---
import { SOCIALS } from "@/constants";
import LinkButton from "./LinkButton.astro";

export interface Props {
  centered?: boolean;
}

const { centered = false } = Astro.props;
---

<div class:list={["flex-wrap justify-center gap-1", { flex: centered }]}>
  {
    SOCIALS.map(social => (
      <LinkButton
        href={social.href}
        class="focus-outline rounded-lg p-2 text-foreground/75 transition-all duration-200 hover:-translate-y-0.5 hover:text-accent sm:p-1.5"
        title={social.linkTitle}
      >
        <social.icon class="inline-block size-6 fill-transparent stroke-current stroke-2 sm:scale-110" />
        <span class="sr-only">{social.linkTitle}</span>
      </LinkButton>
    ))
  }
</div>
