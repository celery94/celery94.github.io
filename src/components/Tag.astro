---
import IconHash from "@/assets/icons/IconHash.svg";

export interface Props {
  tag: string;
  tagName: string;
  size?: "sm" | "lg";
}

const { tag, tagName, size = "sm" } = Astro.props;

const hue = tag.split("").reduce((acc, char) => acc + char.charCodeAt(0), 0) % 360;
const tint = `hsl(${hue} 64% 44%)`;
---

<li
  class:list={[
    "inline-block",
    size === "sm" ? "my-1" : "mx-1 my-2.5",
  ]}
  style={`--tag-tint:${tint};`}
>
  <a
    href={`/tags/${tag}/`}
    transition:name={tag}
    class:list={[
      "tag focus-outline inline-flex rounded-full no-underline",
      size === "sm" ? "text-xs sm:text-sm" : "px-3 py-1.5 text-sm sm:text-base",
    ]}
  >
    <IconHash
      class:list={[
        "inline-block stroke-current",
        size === "sm" ? "mr-0.5 size-3" : "mr-1 size-4",
      ]}
    />
    <span>{tagName}</span>
  </a>
</li>

<style>
  .tag {
    border-color: color-mix(in srgb, var(--tag-tint) 35%, var(--color-border));
    background: color-mix(in srgb, var(--tag-tint) 12%, transparent);
  }

  .tag:hover {
    color: var(--tag-tint);
    border-color: color-mix(in srgb, var(--tag-tint) 55%, var(--color-border));
  }
</style>
