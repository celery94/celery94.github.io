---
import { SHARE_LINKS } from "@/constants";
import LinkButton from "./LinkButton.astro";

const URL = Astro.url;
---

<div
  class="flex flex-col flex-wrap items-center justify-center gap-1 sm:items-start"
>
  <span class="text-sm font-medium text-foreground/75">Share this post</span>
  <div class="text-center">
    {
      SHARE_LINKS.map(social => (
        <LinkButton
          href={`${social.href + URL}`}
          class="focus-outline inline-flex rounded-lg p-2 text-foreground/75 transition-all duration-200 hover:-translate-y-0.5 hover:text-accent sm:p-1.5"
          title={social.linkTitle}
        >
          <social.icon class="inline-block size-6 fill-transparent stroke-current stroke-2 sm:scale-110" />
          <span class="sr-only">{social.linkTitle}</span>
        </LinkButton>
      ))
    }
  </div>
</div>
