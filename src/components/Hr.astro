---
export interface Props {
  noPadding?: boolean;
  ariaHidden?: boolean;
  type?: "default" | "rainbow";
}

const { noPadding = false, ariaHidden = true, type = "default" } = Astro.props;
---

<div class={`max-w-5xl mx-auto ${noPadding ? "px-0" : "px-4"}`}>
  {
    type === "default" ? (
      <hr class="border-border" aria-hidden={ariaHidden} />
    ) : (
      <hr class="rainbow-hr" aria-hidden={ariaHidden} />
    )
  }
</div>
